<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.sixmdk.presentations.splash.view.SplashScreenFragment"
        tools:layout="@layout/fragment_splash_screen"/>
    <action
        android:id="@+id/startSplashScreenFragment"
        app:destination="@id/splashScreenFragment"
        app:enterAnim="@anim/fade_in"
        app:popEnterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popExitAnim="@anim/fade_out"
        app:popUpToInclusive="true"/>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.sixmdk.presentations.registration.view.RegistrationFragment"
        tools:layout="@layout/fragment_registration"/>
    <action android:id="@+id/startRegistrationFragment"
        app:destination="@id/registrationFragment"
        app:enterAnim="@anim/fade_in"
        app:popEnterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popExitAnim="@anim/fade_out"
        app:popUpToInclusive="true"/>

    <fragment
        android:id="@+id/orderTaxiFragment"
        android:name="com.example.sixmdk.presentations.main.view.OrderTaxiFragment"
        tools:layout="@layout/fragment_order_taxi"/>
    <action android:id="@+id/startMainFragment"
        app:destination="@id/orderTaxiFragment"
        app:enterAnim="@anim/fade_in"
        app:popEnterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popExitAnim="@anim/fade_out"
        app:popUpToInclusive="true"/>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.sixmdk.presentations.welcome.view.WelcomeFragment"
        tools:layout="@layout/fragment_welcome"/>
    <action android:id="@+id/startWelcomeFragment"
        app:destination="@id/welcomeFragment"
        app:enterAnim="@anim/fade_in"
        app:popEnterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popExitAnim="@anim/fade_out"
        app:popUpToInclusive="true"/>
</navigation>