<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentations.main.view.OrderTaxiFragment"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/welcome_icon"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_280dp"
        android:src="@drawable/welcome_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_marginHorizontal="@dimen/_17dp"/>

    <TextView
        android:id="@+id/order_taxi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buy_taxi"
        android:textColor="@color/white"
        android:textSize="@dimen/_35sp"
        app:layout_constraintTop_toBottomOf="@id/welcome_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_25dp"/>

    <ImageView
        android:id="@+id/from_route_point"
        android:layout_width="@dimen/_14dp"
        android:layout_height="@dimen/_20dp"
        android:src="@drawable/vector"
        app:layout_constraintTop_toBottomOf="@id/order_taxi_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_marginStart="@dimen/_40dp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/from_route_input"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp"
        android:hint="Откуда:"
        android:textColorHint="@color/white"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/from_route_point"
        app:layout_constraintBottom_toBottomOf="@id/from_route_point"
        app:layout_constraintStart_toEndOf="@id/from_route_point"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_40dp"/>
    <View
        android:layout_width="@dimen/_0dp"
        android:layout_height="1dp"
        android:background="#FEC400"
        app:layout_constraintStart_toStartOf="@id/from_route_point"
        app:layout_constraintEnd_toEndOf="@id/from_route_input"
        app:layout_constraintTop_toBottomOf="@id/from_route_input"
        android:layout_marginTop="@dimen/_4dp"/>


    <ImageView
        android:id="@+id/to_route_point"
        android:layout_width="@dimen/_14dp"
        android:layout_height="@dimen/_20dp"
        android:src="@drawable/vector"
        app:layout_constraintTop_toBottomOf="@id/from_route_point"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_35dp"
        android:layout_marginStart="@dimen/_40dp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/to_route_input"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp"
        android:hint="Куда:"
        android:textColorHint="@color/white"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/to_route_point"
        app:layout_constraintBottom_toBottomOf="@id/to_route_point"
        app:layout_constraintStart_toEndOf="@id/to_route_point"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_40dp"/>
    <View
        android:layout_width="@dimen/_0dp"
        android:layout_height="1dp"
        android:background="#FEC400"
        app:layout_constraintStart_toStartOf="@id/to_route_point"
        app:layout_constraintEnd_toEndOf="@id/to_route_input"
        app:layout_constraintTop_toBottomOf="@id/to_route_input"
        android:layout_marginTop="@dimen/_4dp"/>

    <HorizontalScrollView
        android:id="@+id/choose_type_layout"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/to_route_point"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_route_point"
        android:layout_marginTop="@dimen/_50dp"
        android:orientation="horizontal"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/choose_type_background"
                android:layout_width="@dimen/_142dp"
                android:layout_height="@dimen/_48dp">
                <TextView
                    android:id="@+id/cost_economy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="130р"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Эконом"
                    app:layout_constraintTop_toBottomOf="@id/cost_economy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_8dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/taxi_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/_100dp"
                    android:layout_marginEnd="@dimen/_7dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="@dimen/_4dp"
                android:background="@drawable/choose_type_background"
                android:layout_width="@dimen/_142dp"
                android:layout_height="@dimen/_48dp">
                <TextView
                    android:id="@+id/cost_comfort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="195р"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comfort"
                    app:layout_constraintTop_toBottomOf="@id/cost_comfort"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_8dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/taxi_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/_100dp"
                    android:layout_marginEnd="@dimen/_7dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="@dimen/_4dp"
                android:background="@drawable/choose_type_background"
                android:layout_width="@dimen/_142dp"
                android:layout_height="@dimen/_48dp">
                <TextView
                    android:id="@+id/cost_kids"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="173р"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kids"
                    app:layout_constraintTop_toBottomOf="@id/cost_kids"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_8dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/taxi_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/_100dp"
                    android:layout_marginEnd="@dimen/_7dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="@dimen/_4dp"
                android:background="@drawable/choose_type_background"
                android:layout_width="@dimen/_142dp"
                android:layout_height="@dimen/_48dp">
                <TextView
                    android:id="@+id/cost_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="184р"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery"
                    app:layout_constraintTop_toBottomOf="@id/cost_delivery"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_8dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/taxi_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/_100dp"
                    android:layout_marginEnd="@dimen/_7dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </HorizontalScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_btn"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_40dp"
        app:layout_constraintTop_toBottomOf="@id/choose_type_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_100dp"
        android:layout_marginTop="@dimen/_30dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/enter_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>