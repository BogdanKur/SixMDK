<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentations.main.view.OrderTaxiFragment"
    tools:ignore="MissingConstraints">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wating_page"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/from_route_point"
        android:layout_width="@dimen/_32dp"
        android:layout_height="@dimen/_32dp"
        android:src="@drawable/from_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_32dp"
        android:layout_marginStart="@dimen/_12dp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/from_route_input"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp"
        android:hint="@string/from"
        android:textColorHint="@color/white"
        android:paddingStart="@dimen/_15dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/from_route_point"
        app:layout_constraintBottom_toBottomOf="@id/from_route_point"
        app:layout_constraintStart_toEndOf="@id/from_route_point"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_16dp"/>
    <View
        android:layout_width="@dimen/_0dp"
        android:layout_height="1dp"
        android:background="#474747"
        app:layout_constraintStart_toStartOf="@id/from_route_point"
        app:layout_constraintEnd_toEndOf="@id/from_route_input"
        app:layout_constraintTop_toBottomOf="@id/from_route_input"
        android:layout_marginTop="@dimen/_8dp"/>


    <ImageView
        android:id="@+id/to_route_point"
        android:layout_width="@dimen/_32dp"
        android:layout_height="@dimen/_32dp"
        android:src="@drawable/to_icon"
        app:layout_constraintTop_toBottomOf="@id/from_route_point"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_12dp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/to_route_input"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp"
        android:textColorHint="@color/white"
        android:hint="@string/to"
        android:paddingStart="@dimen/_15dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/to_route_point"
        app:layout_constraintBottom_toBottomOf="@id/to_route_point"
        app:layout_constraintStart_toEndOf="@id/to_route_point"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_16dp"/>
    <View
        android:layout_width="@dimen/_0dp"
        android:layout_height="1dp"
        android:background="#474747"
        app:layout_constraintStart_toStartOf="@id/to_route_point"
        app:layout_constraintEnd_toEndOf="@id/to_route_input"
        app:layout_constraintTop_toBottomOf="@id/to_route_input"
        android:layout_marginTop="@dimen/_8dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/choose_layout_background"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/econom_layout"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_18dp"
            android:layout_marginEnd="@dimen/_28dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_23dp">
            <ImageView
                android:id="@+id/comfort_icon"
                android:layout_width="@dimen/_64dp"
                android:layout_height="@dimen/_64dp"
                android:src="@drawable/normal"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/comfort_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/econom"
                android:textColor="@color/white"
                android:textSize="@dimen/_19sp"
                app:layout_constraintTop_toTopOf="@id/comfort_icon"
                app:layout_constraintStart_toEndOf="@id/comfort_icon"
                android:layout_marginStart="@dimen/_16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="156р"
                android:textColor="@color/white"
                android:textSize="@dimen/_19sp"
                app:layout_constraintTop_toBottomOf="@id/comfort_title"
                app:layout_constraintStart_toStartOf="@id/comfort_title"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#2A252E"
                app:layout_constraintTop_toBottomOf="@id/comfort_icon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/comfort_layout"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_18dp"
            android:layout_marginEnd="@dimen/_28dp"
            app:layout_constraintTop_toBottomOf="@id/econom_layout"
            android:layout_marginTop="@dimen/_34dp">
            <ImageView
                android:id="@+id/comfort_icon"
                android:layout_width="@dimen/_64dp"
                android:layout_height="@dimen/_64dp"
                android:src="@drawable/speedy"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/comfort_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comfort"
                android:textColor="@color/white"
                android:textSize="@dimen/_19sp"
                app:layout_constraintTop_toTopOf="@id/comfort_icon"
                app:layout_constraintStart_toEndOf="@id/comfort_icon"
                android:layout_marginStart="@dimen/_16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="345р"
                android:textColor="@color/white"
                android:textSize="@dimen/_19sp"
                app:layout_constraintTop_toBottomOf="@id/comfort_title"
                app:layout_constraintStart_toStartOf="@id/comfort_title"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#2A252E"
                app:layout_constraintTop_toBottomOf="@id/comfort_icon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kids_layout"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_18dp"
            android:layout_marginEnd="@dimen/_28dp"
            app:layout_constraintTop_toBottomOf="@id/comfort_layout"
            android:layout_marginTop="@dimen/_34dp">
            <ImageView
                android:id="@+id/kids_icon"
                android:layout_width="@dimen/_64dp"
                android:layout_height="@dimen/_64dp"
                android:src="@drawable/vip"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/kids_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kids"
                android:textColor="@color/white"
                android:textSize="@dimen/_19sp"
                app:layout_constraintTop_toTopOf="@id/kids_icon"
                app:layout_constraintStart_toEndOf="@id/kids_icon"
                android:layout_marginStart="@dimen/_16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="145р"
                android:textColor="@color/white"
                android:textSize="@dimen/_19sp"
                app:layout_constraintTop_toBottomOf="@id/kids_title"
                app:layout_constraintStart_toStartOf="@id/kids_title"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#2A252E"
                app:layout_constraintTop_toBottomOf="@id/kids_icon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/order_taxi_btn"
            android:layout_width="@dimen/_0dp"
            android:layout_height="@dimen/_48dp"
            android:background="@drawable/choose_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kids_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_35dp"
            android:layout_marginTop="@dimen/_37dp"
            android:layout_marginHorizontal="@dimen/_85dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose"
                android:textColor="@color/white"
                android:textSize="@dimen/_21sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>