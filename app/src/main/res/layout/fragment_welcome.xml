<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentations.welcome.WelcomeFragment"
    android:background="@color/black"
    tools:ignore="MissingConstraints">
    <TextView
        android:id="@+id/name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Богдан"
        android:textColor="@color/white"
        android:textSize="@dimen/_35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/welcome_title"/>
    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textSize="@dimen/_35sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_60dp"/>
    
    <ImageView
        android:id="@+id/welcome_icon"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_280dp"
        android:src="@drawable/welcome_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_title"
        android:layout_marginTop="@dimen/_56dp"
        android:layout_marginHorizontal="@dimen/_17dp"/>

    <TextView
        android:id="@+id/route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/route"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sp"
        app:layout_constraintTop_toBottomOf="@id/welcome_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20dp"/>
    <ImageView
        android:id="@+id/from_route_point"
        android:layout_width="@dimen/_10dp"
        android:layout_height="@dimen/_10dp"
        android:background="#FEC400"
        app:layout_constraintTop_toBottomOf="@id/route"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_marginStart="@dimen/_40dp"/>
    <TextView
        android:id="@+id/from_route_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp"
        app:layout_constraintTop_toTopOf="@id/from_route_point"
        app:layout_constraintBottom_toBottomOf="@id/from_route_point"
        app:layout_constraintStart_toEndOf="@id/from_route_point"
        android:layout_marginStart="@dimen/_22dp" />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/from_route_input"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/from_route_point"
        app:layout_constraintBottom_toBottomOf="@id/from_route_point"
        app:layout_constraintStart_toEndOf="@id/from_route_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_40dp"/>
    <View
        android:layout_width="@dimen/_0dp"
        android:layout_height="1dp"
        android:background="#A2A2A2"
        app:layout_constraintStart_toStartOf="@id/from_route_point"
        app:layout_constraintEnd_toEndOf="@id/from_route_input"
        app:layout_constraintTop_toBottomOf="@id/from_route_input"
        android:layout_marginTop="@dimen/_4dp"/>


    <ImageView
        android:id="@+id/to_route_point"
        android:layout_width="@dimen/_10dp"
        android:layout_height="@dimen/_10dp"
        android:background="#FEC400"
        app:layout_constraintTop_toBottomOf="@id/from_route_point"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_35dp"
        android:layout_marginStart="@dimen/_40dp"/>
    <TextView
        android:id="@+id/to_route_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp"
        app:layout_constraintTop_toTopOf="@id/to_route_point"
        app:layout_constraintBottom_toBottomOf="@id/to_route_point"
        app:layout_constraintStart_toEndOf="@id/to_route_point"
        android:layout_marginStart="@dimen/_22dp" />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/to_route_input"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/to_route_point"
        app:layout_constraintBottom_toBottomOf="@id/to_route_point"
        app:layout_constraintStart_toEndOf="@id/to_route_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_40dp"/>
    <View
        android:layout_width="@dimen/_0dp"
        android:layout_height="1dp"
        android:background="#A2A2A2"
        app:layout_constraintStart_toStartOf="@id/to_route_point"
        app:layout_constraintEnd_toEndOf="@id/to_route_input"
        app:layout_constraintTop_toBottomOf="@id/to_route_input"
        android:layout_marginTop="@dimen/_4dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_40dp"
        app:layout_constraintTop_toBottomOf="@id/to_route_point"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_100dp"
        android:layout_marginTop="@dimen/_30dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/enter_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy_taxi"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>