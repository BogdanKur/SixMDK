<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentations.registration.view.RegistrationFragment"
    tools:ignore="MissingConstraints"
    android:background="@drawable/background">
    <ImageView
        android:id="@+id/welcome_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_elite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_15dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/name_input"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_40dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sp"
        android:hint="@string/name"
        android:textColorHint="@color/white"
        android:paddingStart="@dimen/_5dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_icon"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_25dp"
        android:layout_marginStart="@dimen/_25dp"/>
    <View
        android:layout_width="@dimen/_0dp"
        android:layout_height="2dp"
        android:background="@drawable/line_background"
        app:layout_constraintStart_toStartOf="@id/name_input"
        app:layout_constraintEnd_toEndOf="@id/name_input"
        app:layout_constraintTop_toBottomOf="@id/name_input" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/surname_input"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_40dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sp"
        android:hint="@string/surname"
        android:textColorHint="@color/white"
        android:paddingStart="@dimen/_5dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_input"
        android:layout_marginTop="@dimen/_55dp"
        android:layout_marginEnd="@dimen/_25dp"
        android:layout_marginStart="@dimen/_25dp"/>
    <View
        android:layout_width="@dimen/_0dp"
        android:layout_height="2dp"
        android:background="@drawable/line_background"
        app:layout_constraintStart_toStartOf="@id/name_input"
        app:layout_constraintEnd_toEndOf="@id/name_input"
        app:layout_constraintTop_toBottomOf="@id/surname_input" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/number_input"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_40dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sp"
        android:hint="@string/number"
        android:textColorHint="@color/white"
        android:paddingStart="@dimen/_5dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/surname_input"
        android:layout_marginTop="@dimen/_55dp"
        android:layout_marginEnd="@dimen/_25dp"
        android:layout_marginStart="@dimen/_25dp"/>
    <View
        android:layout_width="@dimen/_0dp"
        android:layout_height="2dp"
        android:background="@drawable/line_background"
        app:layout_constraintStart_toStartOf="@id/name_input"
        app:layout_constraintEnd_toEndOf="@id/name_input"
        app:layout_constraintTop_toBottomOf="@id/number_input" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signup_btn"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_45dp"
        app:layout_constraintTop_toBottomOf="@id/number_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_95dp"
        android:layout_marginTop="@dimen/_55dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/line_background"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Войти"
            android:textColor="@color/white"
            android:textSize="@dimen/_24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>